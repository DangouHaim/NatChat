<Application x:Class="DirectLogWPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DirectLogWPF"
             StartupUri="View/MainView.xaml">
    <Application.Resources>
        <Style TargetType="local:ScrollingListBox">
            <Setter Property="Grid.Row" Value="1"></Setter>
            <Setter Property="Grid.ColumnSpan" Value="3"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="MessageBox">
            <Setter Property="Grid.Row" Value="2"></Setter>
            <Setter Property="Grid.ColumnSpan" Value="2"></Setter>
            <Setter Property="Margin" Value="5"></Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Grid.Row" Value="2"></Setter>
            <Setter Property="Grid.Column" Value="2"></Setter>
            <Setter Property="Margin" Value="15 30"></Setter>
        </Style>
    </Application.Resources>
</Application>
